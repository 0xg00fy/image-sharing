<head>
     <%= csrf_meta_tags %>

     <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
</head>
<p>
    <center>
    <%= @photo.title %>
    <%= link_to image_tag(@photo.image, class: 'media-object', size: "1366x768") %>
    </center>
    <%= link_to 'Remove', @photo, class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?'} %>
    
</p>   

<p>
    <center>
    <h2>Comments: </h2>
    <%= render @photo.comments %>
    </center>
    
    <h2>Add a comment:</h2>
    <%= render 'comments/form' %>
    
</p>

