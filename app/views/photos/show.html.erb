<h1>test</h1>

<p>
    <center>
    <%= link_to image_tag(@photo.image, class: 'media-object', size: "1366x768") %>
    </center>
    <%= link_to 'Remove', @photo, class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?'} %>
    

    
    <h2>Add a comment:</h2>
    <%= form_for([@photo, @photo.comments.build]) do |f| %>
        <p>
            <%= f.label :commenter %><br>
            <%= f.text_field :commenter %>
        </p>
        <p>
              
            <%= f.label :body %><br>
            <%= f.text_area :body %>
        </p>
        <p>
            <%= f.submit %>
        </p>
    <% end %>
    
    <center>
    <h2>Comments: </h2>
    <%= render @photo.comments %>
    </center>
    
</p>
